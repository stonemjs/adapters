{
  "name": "@stone-js/adapters",
  "version": "0.0.1",
  "description": "Stone.js adapters",
  "author": "Mr. Stone <evensstone@gmail.com>",
  "license": "MIT",
  "repository": "git@github.com:stonemjs/adapters.git",
  "homepage": "https://github.com/stonemjs/adapters#readme",
  "bugs": {
    "url": "https://github.com/stonemjs/adapters/issues"
  },
  "keywords": [
    "aws",
    "faas",
    "node",
    "http",
    "server",
    "lambda",
    "worker",
    "browser",
    "console",
    "Stone.js",
    "adapters",
    "serverless",
    "event-driven"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/types/index.d.mts",
  "files": [
    "/dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/types/index.d.mts",
        "default": "./dist/index.cjs"
      }
    },
    "./decorators": {
      "import": {
        "types": "./dist/types/decorators.d.mts",
        "default": "./dist/decorators.mjs"
      },
      "require": {
        "types": "./dist/types/decorators.d.mts",
        "default": "./dist/decorators.cjs"
      }
    }
  },
  "scripts": {
    "types": "tsc",
    "lint": "standard src",
    "lint:fix": "standard --fix src tests",
    "lint:test": "standard --env jest tests",
    "predoc": "rimraf docs",
    "doc": "jsdoc src -r -a all -c jsdoc.json -R README.md -d docs/jsdoc",
    "doc:serve": "npm run doc && npx http-server docs/jsdoc -p 8081",
    "prebuild": "rimraf dist",
    "build": "npm run lint && rollup -c && npm run types",
    "release": "npm run test:text && npm run build && npm publish --access public",
    "test": "npm run lint:test && jest",
    "test:cvg": "npm run lint:test && jest --coverage",
    "test:text": "npm run test:cvg -- --coverageReporters=text",
    "test:html": "npm run test:cvg -- --coverageReporters=html text",
    "test:lcov": "npm run test:cvg -- --coverageReporters=lcov text"
  },
  "dependencies": {
    "@stone-js/config": "^1.0.0",
    "@stone-js/common": "^1.0.0",
    "@stone-js/pipeline": "^1.0.0",
    "@stone-js/service-container": "^1.0.0",
    "accepts": "^1.3.8",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.16",
    "mime": "^3.0.0",
    "on-finished": "^2.4.1",
    "ora": "^8.0.1",
    "progress": "^2.0.3",
    "statuses": "^2.0.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.22.20",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/preset-env": "^7.22.20",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-multi-entry": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "babel-jest": "^29.7.0",
    "docdash": "^2.0.2",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "rimraf": "^5.0.5",
    "rollup": "^4.1.5",
    "rollup-plugin-node-externals": "^6.1.2",
    "standard": "^17.1.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "standard": {
    "parser": "@babel/eslint-parser",
    "globals": [
      "it",
      "jest",
      "test",
      "expect",
      "describe",
      "afterEach",
      "beforeEach"
    ]
  }
}
